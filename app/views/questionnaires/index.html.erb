<ul class ="questionnaire_buttons">
<% @questionnaires.each do |questionnaire| %>
  <%= content_tag(
        'li',
        :class => questionnaire_button_classes(questionnaire)
      ) do %>
  
    <%= link_to(
          image_tag(questionnaire.button_image.url(:link)), 
          questionnaire_path(questionnaire),
          :class => 'image_link'
        ) 
    %>
    <%= link_to(
          questionnaire.title, 
          questionnaire_path(questionnaire),
          :class => 'text_link'
        ) 
    %>
  
  <% end %>
<% end %>
</ul>
