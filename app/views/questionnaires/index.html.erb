<ul>
<% @questionnaires.each do |questionnaire| %>
  <li class="questionnaire_button">
    <%= link_to(
          image_tag(
            questionnaire.button_image.url(:link)
          ), 
          questionnaire_path(questionnaire),
          :class => 'image_link'
        ) 
    %>
    <%= link_to(
          questionnaire.title, 
          questionnaire_path(questionnaire),
          :class => 'text_link'
        ) 
    %>
  </li>
<% end %>
</ul>
